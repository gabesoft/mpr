{
    "redis": {
        "command": "redis-server"
      , "color": "cyan"
    }
  , "vogue": {
        "command": "vogue"
      , "color": "magenta"
      , "args": [
            "--port"
          , "8001"
          , "../blogmon/pub"
        ]
    }
  , "stylus": {
        "command": "stylus"
      , "color": "yellow"
      , "args": [
            "--use nib"
          , "--compress"
          , "--watch ../stylesheets"
        ]
    }
  , "server": {
        "command": "nodemon"
      , "color": "blue"
      , "env": {
            "NODE_ENV": "development"
          , "PORT": "3002"
        }
      , "cwd": "../blogmon"
      , "args": [
            "--debug"
          , "../blogmon/server.js"
          , "--watch"
          , "../blogmon/lib"
          , "--watch"
          , "../blogmon/pub"
        ]
    }
}
