{
    // process label
    "server": {
        // command to execute
        "command": "./node_modules/node-dev/bin/node-dev"
        // set to true for commands specified with relative path
      , "resolvePath": true
        // output color label (blue, green, cyan, brown, magenta, yellow, grey)
      , "color": "blue"
        // command arguments
      , "args": [
            "lib/server.js"
          , "--port 8001"
        ]
        // environment values (will override existing values)
      , "env": {
            "NODE_ENV": "development"
          , "NODE_PATH": "/usr/bin/node"
        }
        // current working directory to set when starting the command
      , "cwd": "/work/myproject"
    }
}
